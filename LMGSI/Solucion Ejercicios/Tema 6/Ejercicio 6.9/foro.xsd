<?xml version="1.0" encoding="UTF-8"?>
<xs:schema elementFormDefault="qualified" xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <xs:element name="FAQ">
    <xs:complexType>
      <xs:sequence>
        <xs:element ref="INFO"/>
        <xs:element maxOccurs="unbounded" ref="PART"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
  <xs:element name="INFO">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="TITULO" type="xs:string"/>
        <xs:element name="AUTOR" type="xs:string"/>
        <xs:element name="EMAIL" type="xs:string"/>
        <xs:element name="VERSION" type="xs:string"/>
        <xs:element name="FECHA" type="xs:string"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
  <xs:element name="PART">
    <xs:complexType>
      <xs:sequence>
        <xs:element maxOccurs="unbounded" ref="Q"/>
      </xs:sequence>
      <xs:attribute name="NO" type="T_parte" use="required"/>
      <xs:attribute name="TITLE" type="xs:string" use="required"/>
    </xs:complexType>
  </xs:element>
  <xs:simpleType name="T_parte">
    <xs:restriction base="xs:string">
      <xs:pattern value="P[0-9]{1,3}"/>
    </xs:restriction>
  </xs:simpleType>
  <xs:element name="Q">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="QTEXT" type="xs:string"/>
        <xs:element maxOccurs="unbounded" minOccurs="0" name="A" type="xs:string"/>
      </xs:sequence>
      <xs:attribute name="N" type="T_numero" use="required"/>
    </xs:complexType>
  </xs:element>
  <xs:simpleType name="T_numero">
    <xs:restriction base="xs:integer">
      <xs:minInclusive value="1"/>
    </xs:restriction>
  </xs:simpleType>
</xs:schema>